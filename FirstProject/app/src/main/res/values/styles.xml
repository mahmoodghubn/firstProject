<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/textMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/textMarginLeft</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/textMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/textMarginLeft</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/textMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/textMarginLeft2</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_marginLeft">@dimen/textMarginLeft</item>
    </style>
</resources>
